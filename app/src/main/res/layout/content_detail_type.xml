<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detail_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uni.redcarpet.ui.activities.EventDetailsActivity"
    tools:showIn="@layout/activity_event_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/imageView2"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textMultiLine"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/description"
                    android:text="Event description"
                    android:singleLine="false"
                    android:selectAllOnFocus="true"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:textSize="16sp"
                    android:layout_margin="10sp"/>

            </LinearLayout>

            <TextView
                android:text="Event name "

                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="18sp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView14"
                android:layout_marginTop="5dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/eventName"
                android:selectAllOnFocus="true"
                android:text="Event name"
                android:textSize="18sp"
                android:gravity="start"
                android:layout_marginLeft="15sp"
                android:textAlignment="viewStart" />

            <TextView
                android:text="Event date"
                android:layout_below="@id/eventName"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="18sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textView23"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15sp"
                android:id="@+id/date">

                <TextView
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:maxLength="2"
                    android:ems="10"
                    android:id="@+id/month"
                    android:hint="MM"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:layout_width="30dp"
                    android:textAlignment="viewStart"
                    android:gravity="start"/>

                <TextView
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView28"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/day"
                    android:hint="DD"
                    android:inputType="date"
                    android:maxLength="2"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:layout_width="30dp" />

                <TextView
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView30"
                    android:textSize="18sp"
                    android:layout_weight="0.00"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/year"
                    android:hint="YYYY"
                    android:maxLength="4"
                    android:layout_width="75dp"
                    android:inputType="date"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:text="Organizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_below="@+id/event_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/organizer"
                android:text="Event organizer"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:layout_below="@+id/textView25"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:layout_marginLeft="15sp"/>

            <TextView
                android:text="Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView29"
                android:textSize="18sp"
                android:fontFamily="sans-serif-smallcaps" />

            <TextView
                android:text="Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_marginLeft="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/list_view_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/et_add_comment" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/empty_list"
                    android:text="@string/no_comment_added"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/et_add_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/margin_small"
                    android:background="@drawable/rounded_rect_bg"
                    android:hint="@string/add_a_comment"
                    android:imeOptions="actionSend"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/padding_small" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_post_comment"
                    android:text="@string/post_comment"
                    android:background="@color/colorPrimaryDark"

                    />
                </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
