<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uni.redcarpet.ui.activities.MainActivity"
    android:background="@color/colorGrayLight"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/red_300"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:src="@drawable/photocercle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Change Profile Photo"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="5dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/typedname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/name"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/name"
            android:hint="Name"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/usersname"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@+id/name"
            android:paddingLeft="5dp"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/typedusersname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/usersname"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/usersname"
            android:hint="Username"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/gender"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@+id/usersname"
            android:paddingLeft="5dp"
            android:text="Gender"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/selectid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/gender"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/gender"
            android:hint="Gender"
            android:textColor="@color/black"
            android:textSize="17dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Private Information"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_email_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:paddingLeft="20dp"
            android:text="Wiliam@gmail.com"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_phone_android_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:paddingLeft="20dp"
            android:text="+266 225 225"
            android:textStyle="bold" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_phone_android_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:paddingLeft="20dp"
            android:hint="Location"
            android:textStyle="bold"
            android:textSize="16dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setcancel"
            android:text="Cancel"
            android:layout_marginLeft="15dp"
            android:background="@color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setdone"
            android:text="Done"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            />



    </RelativeLayout>


</LinearLayout>



